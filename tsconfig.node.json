{
 "ts-node": {
  "esm": true,
  "experimentalSpecifierResolution": "node"
 },
 "compilerOptions": {
  "composite": true,
  "skipLibCheck": true,
  "module": "ESNext",
  "moduleResolution": "bundler",
  "allowSyntheticDefaultImports": true,
  "strict": true,
  "resolveJsonModule": true,
  "esModuleInterop": true,
  "baseUrl": ".",
  "paths": {
   "@/*": ["./src/*"]
  }
 },
 // "include": ["src", "vite.config.mts"],
 "include": [
  "src",
  "vite.config.mts"
  // "src/**/*.ts",
  // "src/**/*.mts",
  // "src/**/*.mtsx",
  // "src/**/*.tsx",
  // "src/**/*.d.ts",
  // "src/**/*.tsx"
 ],
 "exclude": ["node_modules"]
}
