{
 "plugins": ["prettier-plugin-tailwindcss"],
 "tailwindConfig": "tailwind.config.ts",
 "arrowParens": "always",
 "bracketSpacing": true,
 "endOfLine": "lf",
 "htmlWhitespaceSensitivity": "css",
 "insertPragma": false,
 "jsxBracketSameLine": false,
 "jsxSingleQuote": false,
 "printWidth": 90,
 "proseWrap": "preserve",
 "quoteProps": "preserve",
 "requirePragma": false,
 "semi": true,
 "singleQuote": false,
 "tabWidth": 1,
 "trailingComma": "none",
 "useTabs": false,
 "embeddedLanguageFormatting": "auto",
 "overrides": [
  {
   "files": "src/**/*.html",
   "options": {
    "printWidth": 80,
    "singleQuote": false,
    "tabWidth": 1
   }
  },
  {
   "files": ["./src/**/*.{js,ts,jsx,tsx,mdx}"],
   "options": {
    "printWidth": 80,
    "singleQuote": false,
    "tabWidth": 2
   }
  },
  {
   "files": ["./src/pages/**/*.{js,ts,jsx,tsx,mdx}"],
   "options": {}
  },
  {
   "files": ["./src/components/**/*.{js,ts,jsx,tsx,mdx}"],
   "options": {}
  },
  {
   "files": ["./src/app/**/*.{js,ts,jsx,tsx,mdx}"],
   "options": {}
  }
 ]
}
